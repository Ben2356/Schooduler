<Window x:Class="SchedulerApplication.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchedulerApplication"
        mc:Ignorable="d"
        Title="About" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock FontSize="30" Margin="50,50,50,10" HorizontalAlignment="Center">Schooduler</TextBlock>
            <TextBlock FontSize="11" HorizontalAlignment="Center">Build: </TextBlock>
            <TextBlock FontSize="11" HorizontalAlignment="Center" Margin="10,80,10,50">Developed by: Benjamin Moreno</TextBlock>
        </StackPanel>
        <Button Grid.Row="1" HorizontalAlignment="Center" MinHeight="30" MaxHeight="50" MinWidth="80" MaxWidth="100" Margin="10" Click="okButton_Click">_OK</Button>
    </Grid>
</Window>
